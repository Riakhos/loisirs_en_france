{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <h1>Liste des Tags</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Activités associées</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                        {% for activity in tag.activities %}
                            <span class="badge bg-primary">{{ activity.name }}</span>
                        {% else %}
                            <span class="text-muted">Aucune</span>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin', { entity: 'Tag', action: 'edit', id: tag.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
