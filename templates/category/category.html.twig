{% extends 'base.html.twig' %}

{% block title %}Categorie {{ category.slug }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center">
        <div class="card w-auto border-secondary-custom bg-primaryBlue m-2 p-3" style="max-width: 1000px;">
            <div class="row g-0">            
                <div class="col-md-6">
                    <div id="carouselSubcategories" class="carousel carousel-light slide card-img-top" data-bs-ride="carousel">
                        <!-- Indicateurs -->
                        <div class="carousel-indicators">
                            {% for subcategories in category.subcategories %}
                                <button type="button" data-bs-target="#carouselSubcategories" data-bs-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}" aria-current="{% if loop.first %}true{% endif %}" aria-label="Slide {{ loop.index }}"></button>
                            {% endfor %}
                        </div>

                        <!-- Slides -->
                        <div class="carousel-inner" data-bs-interval="10000">
                            {% for subcategories in category.subcategories %}
                                <div class="carousel-item {% if loop.first %}active{% endif %}" data-subcategories-name="{{ subcategories.name }}">
                                    <a href="#">
                                        <img src="/uploads/{{ subcategories.image }}"
                                            class="figure-img img-fluid rounded border-secondary-custom" 
                                            alt="{{ subcategories.name }}" 
                                            style="object-fit: cover; width: 100%; height: 400px;"
                                            loading="lazy">
                                        <div class="carousel-caption">
                                            <h2 class="color-secondary-custom">{{ subcategories.name }}</h2>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Boutons de navigation -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselSubcategories" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselSubcategories" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h1 class="card-title color-secondary-custom">{{ category.name }}</h1>
                        <div>
                            {# Description #}
                            <p 
                                id="categoryDescription" 
                                class="card-text color-secondary-custom text-truncate d-sm-block d-md-none" 
                                style="max-height: 3em; overflow: hidden;">
                                {{ category.description|striptags }}
                            </p>
                            {# Description visible en entier sur écrans md et plus #}
                            <p class="card-text color-secondary-custom d-none d-md-block">
                                {{ category.description|striptags }}
                            </p>
                            {# Lien "Voir Plus" visible uniquement sur les écrans sm #}
                            <a
                                id="toggleDescription"
                                href="#" 
                                class="link text-decoration-none p-0 d-sm-none">
                                Voir Plus...
                            </a>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <a id="subcategoryButton" href="#" class="btn btn-primary mt-2">
                        {% for subcategories in category.subcategories %}
                            {% if loop.first %}
                                {{ subcategories.name }}
                            {% endif %}
                        {% endfor %}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const description = document.getElementById('categoryDescription');
            const toggleBtn = document.getElementById('toggleDescription');

            if (description && toggleBtn) { // Vérifier si les éléments existent
                let isExpanded = false;

                toggleBtn.addEventListener('click', (e) => {
                    e.preventDefault();

                    // Afficher/masquer uniquement sur petits écrans
                    if (window.innerWidth < 768) { 
                        if (isExpanded) {
                            description.classList.add('text-truncate');
                            description.style.maxHeight = '3em';
                            toggleBtn.innerText = 'Voir Plus...';
                        } else {
                            description.classList.remove('text-truncate');
                            description.style.maxHeight = 'none';
                            toggleBtn.innerText = '...Voir Moins';
                        }
                        isExpanded = !isExpanded;
                    }
                });
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.getElementById('carouselSubcategories');
            const subcategoryButton = document.getElementById('subcategoryButton');

            if (carousel && subcategoryButton) {
                carousel.addEventListener('slide.bs.carousel', (event) => {
                    // Trouver le slide actif après le changement
                    const activeSlide = event.relatedTarget;

                    // Récupérer le nom de la sous-catégorie depuis l'attribut data-subcategory-name
                    const subcategoryName = activeSlide.getAttribute('data-subcategories-name');

                    // Mettre à jour le texte du bouton
                    subcategoryButton.textContent = subcategoryName;
                });
            }
        });
    </script>

{% endblock %}
