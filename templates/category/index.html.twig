{# Categorie Figure #}
<div class="container">
	<ul class="row list-unstyled">
		{% for category in categories %}
			<li class="col-6 col-md-3 mb-4 text-center">
				<a 
					href="{{ path('app_category', { slug : category.slug } ) }}" 
					class="text-decoration-none" 
					aria-label="Voir la catÃ©gorie {{ category.name }}"
				>
					<div class="card border-secondary-custom shadow-sm text-center h-100">
						<div class="fixed-square">
							<picture>
								{# WebP version #}
								<source srcset="/uploads/photos/{{ category.image|replace({'.jpg': '.webp', '.png': '.webp'}) }}" type="image/webp">
								{# Fallback JPG/PNG #}
								<img 
									src="/uploads/photos/{{ category.image }}" 
									class="figure-img img-fluid rounded border-secondary-custom" 
									alt="Image de {{ category.name }}" 
									aria-hidden="false" 
									loading="lazy" 
									style="object-fit: cover; width: 100%; height: 100%;"
								>
							</picture>
						</div>
						<div class="card-body border-secondary-custom position-absolute bottom-0 start-0 w-100 text-center py-2" style="background: rgba(0, 0, 0, 0.6);">
							<h2 class="fs-2 fs-sm-4">{{ category.name }}</h2>
						</div>
					</div>
				</a>
			</li>
		{% endfor %}
	</ul>
</div>