{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

    {# Catégorie Figure #}
    {% include "category/index.html.twig" %}

    {# Card Trouver Aventure #}
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="card mb-3 bg-primaryBlue border-secondary-custom">
                <div class="row align-items-center">
                    <div class="col-md-6 d-flex justify-content-center p-0">
                        <div class="fixed-square">
                            <picture>
                                {# WebP version #}
                                <source srcset="/img/aventure-td.webp" type="image/webp">
                                {# Fallback JPG/PNG #}
                                <img 
                                    src="/img/aventure-td.jpg" 
                                    class="img-fluid rounded-start h-100 object-fit-cover"
                                    alt="Image représentant une aventure en pleine nature"
                                    role="img"
                                    aria-label="Illustration d'une aventure"
                                    loading="lazy"
                                    aria-hidden="false"
                                    preserveAspectRatio="xMidYMid slice"
                                    focusable="false"
                                >
                            </picture>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                        <div class="card-body text-center">
                            <h3 class="card-title fw-bold color-secondary-custom mt-3">Trouver une Aventure</h3>
                            <p class="card-text color-secondary-custom mt-3">
                                Explorez des expériences inoubliables qui vous attendent.
                                Prêt à plonger dans l’inconnu ?
                            </p>
                            <a href="{{ path('app_eventstrend', { slug : 'evenements-speciaux' }) }}" 
                                class="btn btn-primary mt-3"
                                aria-label="Découvrir les événements spéciaux liés à cette aventure">
                                Découvrir Maintenant
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Évènements Tendances Figure #}
    {% include "eventstrend/index.html.twig" %}
    
    {# Card Explorez Maintenant #}
    {% include "home/explorenow.html.twig" %}

    {# Section Explorez nos catégories #}
    <div class="container d-flex justify-content-center align-items-center text-center">
        <h4 class="fw-bold color-primary-custom m-3 fs-1">
            Explorez nos catégories et trouvez l'activité qui vous fera vibrer !
        </h4>
    </div>

    {# Blog #}
    {# include "blog/index.html.twig" #}

    {# Section Prêt à Découvrir? #}
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="card bg-primaryBlue border-secondary-custom p-4">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="d-flex flex-column align-items-center text-center">
                            <h1 class="fw-bold color-secondary-custom m-3">Prêt à Découvrir?</h1>
                            <a href="{{ path('app_register') }}" 
                                class="btn btn-primary m-3"
                                aria-label="S'inscrire pour découvrir les événements spéciaux">
                                Inscrivez-vous
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Avis Utilisateur #}
    {% include "home/viewrating.html.twig" %}

{% endblock %}