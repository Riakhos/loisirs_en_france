{% extends 'base.html.twig' %}

{% block title %}Loisirs en France!{% endblock %}

{% block body %}
    {# Categorie Figure #}
    {% include "category/index.html.twig" %}
    {# Card Trouver Aventure #}
    <div class="container w-auto d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="card mb-3 bg-primaryBlue border-secondary-custom">
                <div class="row">
                    <div class="col-md-4 p-0 m-0">
                        <div class="fixed-square">
                            <img 
                                src="/img/aventure-td.jpg" 
                                class="img-fluid rounded-start h-100 object-fit-cover"
                                role="img"
                                aria-label="Placeholder: Image" 
                                preserveAspectRatio="xMidYMid slice" 
                                focusable="false"
                            >
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-block justify-content-between">
                            <h3 class="card-title fw-bold color-secondary-custom mt-3">Trouver une Aventure</h3>
                            <p class="card-text color-secondary-custom mt-3">
                                <span>Explorez des expériences inoubliables qui vous attendent.
                                Prêt à plonger dans l’inconnu ?</span>
                            </p>
                            <a href="#" class="btn btn-primary mt-3">Découvrir Maintenant</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# Évènements Tendances Figure #}
    {% include "category/index.html.twig" %}
{% endblock %}
