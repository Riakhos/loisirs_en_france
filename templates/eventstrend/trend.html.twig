{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center">
        <div class="card w-auto border-secondary-custom bg-primaryBlue m-2 p-3" style="max-width: 1000px;">
            <div class="row g-0">
                <small class="card-header color-secondary-custom" style="border-bottom: none;">
                    <i>
                        <a href="{{ path('app_eventstrend', { slug : trend.eventstrend.slug } ) }}" class=" text-decoration-none color-secondary-custom">{{ trend.eventstrend.name }}
                        </a> > {{ trend.name }}
                    </i>
                </small>
                <div class="col-md-6">
                    <div id="carouselActivity" class="carousel carousel-light slide card-img-top" data-bs-ride="carousel">
                        {# Indicateurs #}
                        <div class="carousel-indicators">
                            {% for activity in trend.activity %}
                                <button 
                                    type="button" 
                                    data-bs-target="#carouselActivity" 
                                    data-bs-slide-to="{{ loop.index0 }}" 
                                    class="{% if loop.first %}active{% endif %}" 
                                    aria-current="{% if loop.first %}true{% endif %}" 
                                    aria-label="Slide {{ loop.index }}"
                                ></button>
                            {% endfor %}
                        </div>
                        {# Slides #}
                        <div class="carousel-inner" data-bs-interval="10000">
                            <div 
                                class="carousel-item active"
                                data-activity-name="{{ trend.activity.name }}"
                                data-activity-slug="{{ trend.activity.slug }}"
                                data-activity-id="{{ trend.activity.id }}"
                            >
                                <a href="{{ path('app_activity', { slug: trend.activity.slug }) }}">
                                    <img 
                                        src="/uploads/{{ trend.activity.image }}"
                                        class="figure-img img-fluid rounded border-secondary-custom" 
                                        alt="{{ trend.activity.name }}" 
                                        style="object-fit: cover; width: 100%; height: 400px;"
                                        loading="lazy"
                                    >
                                    <div class="carousel-caption" style="background-color: rgba(0, 0, 0, 0.2);">
                                        <h2 class="color-secondary-custom">{{ trend.activity.name }}</h2>
                                    </div>
                                </a>
                            </div>
                        </div>

                        {# Boutons de navigation #}
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselActivity" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselActivity" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h1 class="card-title color-secondary-custom">{{ trend.name }}</h1>
                        <div>
                            {# Lien "Voir Plus/Moins" pour la description visible uniquement sur sm et plus petits #}
                            <p class="d-sm-block d-md-none">
                                <a 
                                    class="link text-decoration-none" 
                                    type="button" 
                                    data-bs-toggle="collapse" 
                                    data-bs-target="#collapseActivityDescription" 
                                    aria-expanded="false" 
                                    aria-controls="collapseActivityDescription"
                                    id="toggleActivityDescriptionButton">
                                    Voir Plus...
                                </a>
                            </p>
                            {# Conteneur pour la description avec collapse horizontal seulement pour sm et plus petits #}
                            <div class="d-sm-block d-md-none">
                                <div 
                                    class="collapse" 
                                    id="collapseActivityDescription">
                                    <div 
                                        class="card card-body color-secondary-custom bg-primaryBlue border-secondary-custom">
                                        {{ trend.description|striptags }}
                                    </div>
                                </div>
                            </div>
                            {# La description est toujours visible sur md et plus grands #}
                            <div class="d-none d-md-block">
                                <div 
                                    class="card card-body color-secondary-custom bg-primaryBlue border-secondary-custom">
                                    {{ trend.description|striptags }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer btn-group d-flex justify-content-center align-items-center mt-4" role="group" aria-label="Basic outlined example" style="border-top: none;">
                    <a id="addToCartButton" type="button" class="btn">Ajouter au panier</a>
                    <button href="#"  type="button" class="btn">Réserver</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Script pour basculer le texte "Voir Plus" et "Voir Moins"
        document.addEventListener('DOMContentLoaded', () => {
            const toggleBtn = document.getElementById('toggleActivityDescriptionButton');
            const collapseElement = document.getElementById('collapseActivityDescription');

            // Mettre à jour le texte lors de l'ouverture
            collapseElement.addEventListener('shown.bs.collapse', () => {
                toggleBtn.textContent = 'Voir Moins';
            });

            // Mettre à jour le texte lors de la fermeture
            collapseElement.addEventListener('hidden.bs.collapse', () => {
                toggleBtn.textContent = 'Voir Plus...';
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.getElementById('carouselActivity');
            const addToCartButton = document.getElementById('addToCartButton');

            // Fonction pour mettre à jour l'ID de l'activité
            function updateActivityId() {
                const activeItem = carousel.querySelector('.carousel-item.active');
                const activityId = activeItem ? activeItem.getAttribute('data-activity-id') : null;
                if (activityId) {
                    addToCartButton.setAttribute('href', `/cart/add/${activityId}` );  // Changez l'URL en fonction de votre route
                } else {
                    // Désactive le bouton si aucun ID n'est trouvé
                    addToCartButton.removeAttribute('href');
                }
            }

            // Mettre à jour l'ID de l'activité lorsque le carrousel change
            carousel.addEventListener('slid.bs.carousel', updateActivityId);

            // Initialiser l'ID de l'activité lorsque la page charge
            updateActivityId();

            // Gérer l'événement de clic sur le bouton
            addToCartButton.addEventListener('click', (event) => {
                const href = addToCartButton.getAttribute('href');
                if (!href) {
                    event.preventDefault(); // Empêche la redirection si l'ID n'est pas défini
                    alert("Veuillez sélectionner une activité avant de l'ajouter au panier.");
                }
            });
        });
    </script>
{% endblock %}
